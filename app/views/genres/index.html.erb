<h1> All Genres </h1>
<% if @user %>
  <% if @user.role == "admin" %>
  <h2>Create New Genre</h2>
  <%= form_for [@admin, @genre], :url => admin_genres_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
  <% end %>
  <% end %>
<% end %>
<ul>
<% @genres.each do |genre| %>
  <li><%= link_to genre.name, genre_path(genre) %></li>
<% end %>
</ul>
